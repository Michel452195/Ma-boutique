rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les paniers
    match /carts/{userId} {
      // Seuls les utilisateurs authentifiés peuvent lire/écrire leur propre panier
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Règles pour les commandes
    match /orders/{orderId} {
      // Les utilisateurs peuvent lire/écrire seulement leurs propres commandes
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      // Permettre la création de nouvelles commandes
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Règles pour les produits (si on veut les stocker dans Firestore)
    match /products/{productId} {
      // Lecture publique pour tous les produits
      allow read: if true;
      // Écriture seulement pour les administrateurs (à définir)
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}